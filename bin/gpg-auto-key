#!/bin/sh

GPG=`which gpg`

if [ -x "$GPG" ] ; then
    $GPG \
        --no-default-keyring \
        --primary-keyring auto-pubring.kbx \
        --keyring pubring.kbx \
        --auto-key-locate "cert pka ldap keyserver local" \
        --keyserver-options auto-key-retrieve \
        "$@"
else
    echo "Can't find gpg executable."
fi
