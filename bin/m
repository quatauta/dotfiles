#!/bin/sh

export EDITOR="vim -f"

for MUTT in neomutt mutt ; do
    if [ -x "$(which "${MUTT}" 2>/dev/null)" ] ; then
        export MUTT
        break
    fi
done

if [ -x "${MUTT}" ] ; then
    "${MUTT}" -Z "$@" || "${MUTT}" -f = "$@"
    (
        touch /var/mail/daniel
        offlineimap &
    ) 1>/dev/null 2>&1 &
fi
