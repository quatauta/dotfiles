#!/bin/sh

APP="$1"
shift

APP_DIR="${HOME}/.config/google-chrome-${APP}"
CHROME_DIR="${HOME}/.config/google-chrome"

for CHROME in "${HOME}/bin/google-chrome" /usr/bin/google-chrome{,-unstable,-beta,-stable} ; do
    if [ -x "${CHROME}" ] ; then
        break
    fi
done

[ -d "${APP_DIR}" ] || cp -a "${CHROME_DIR}" "${APP_DIR}"

exec "${CHROME}" --user-data-dir="${APP_DIR}" "$@"
