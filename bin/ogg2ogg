#!/bin/sh

renice 20 $$
ionice -c3 -p$$

CPUS=$(nproc --ignore=$(($(nproc) / 2)))

find $@ -iname "*.ogg" -print0 |
sed -e 's|"|\\"|g' |
sort -uz |
xargs -0r -P${CPUS} -IOGG sh -c 'if [ ! -r "OGG.ogg" ] ; then
                                     echo "$(date +%H:%M:%S) OGG -> ogg ..." ;
                                     oggdec -Q -o "OGG.wav" "OGG" &&
                                     oggenc -Q -q4 -o "OGG.ogg" "OGG.wav" ;
                                     rm -f "OGG.wav" ;
                                     echo "$(date +%H:%M:%S) OGG done." ;
                                 fi'

find $@  -iname "*.ogg" |
sort |
while read ogg ; do
    if [ -r "${ogg}.flac" ] ; then
        vorbiscomment -R "${ogg}" |
        vorbiscomment -R -w "${ogg}.ogg"
    fi
done

