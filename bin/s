#!/bin/sh

# screen -wipe >/dev/null
# 
# SCREEN="$(screen -ls | awk '/(At|De)tached/ { print $1 }' | head -n1)"
# 
# if [ -n "${SCREEN}" ] ; then
#     exec screen -x "${SCREEN}"
# else
#     exec screen "${@}"
# fi

TMUX_SESSIONS="$(tmux list-sessions 2>/dev/null | grep -iv 'attached' | awk '/./ { print $1 }' | head -n1)"

if [ -n "${TMUX}" ] ; then
    echo "This is a tmux session! No need to start an additional one within."
else
    if [ -n "${TMUX_SESSIONS}" ] ; then
        if [ -n "$1" ] ; then
            tmux new-window "${@}"
        fi

        exec tmux attach-session -t "${TMUX}"
    else
        exec tmux new-session "${@}"
    fi
fi
