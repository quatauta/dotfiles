#!/bin/sh

_mode() {
    MODES="tmux screen"

    for M in ${MODES} ; do
        if [ -x "$(which "${M}" 2>/dev/null)" ] ; then
            echo "${M}"
            break
        fi
    done
}

_detached_session_screen() {
    screen -ls 2>/dev/null |
    grep -i 'detached' |
    awk '{ print $1 }' |
    head -n1
}

_detached_session_tmux() {
    tmux list-sessions 2>/dev/null |
    grep -iv 'attached' |
    awk '{ print $1 }' |
    head -n1
}

_attach_session_screen() {
    exec screen -r "$1"
}

_attach_session_tmux() {
    if [ -z "${TMUX}" ] ; then
        exec tmux attach-session -t "$1"
    fi
}

export MODE="$(_mode)"
export DETACHED_SESSION="$(_detached_session_"${MODE}")"

if [ -n "${DETACHED_SESSION}" ] ; then
    _attach_session_"${MODE}" "${DETACHED_SESSION}"
else
    exec "${MODE}"
fi
