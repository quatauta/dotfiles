#!/bin/sh

export LANG=C

if [ -r "PKGBUILD" ] ; then
    updpkgsums &&
    makepkg -fcC &&
    namcap PKGBUILD &&
    namcap *.pkg.tar.xz &&
    (
        find -iname "*.pkg.tar.xz" |
        while read PKG ; do
            set -x
            if ! [ -r "${PKG}.sig" ] || [ "${PKG}" -nt "${PKG}.sig" ] ; then
                gpg --detach-sign "${PKG}"
            fi
            set +x
        done
    )
    pacman -Qlip *.pkg.tar.xz
else
    echo "Not PKGBUILD found in current directory."
    exit 1
fi
