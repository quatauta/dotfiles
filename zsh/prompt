# ~/.zsh/propmt
# vim:syntax=zsh:

autoload -Uz promptinit
promptinit

case $TERM in
    xterm*)
        precmd () { print -Pn "\e]0;%n@%m: %~\a" }
        ;;
esac

eval "$(starship init zsh)"
#LIQUIDPROMPTS="/usr/bin/liquidprompt \"${HOME}\"/Dokumente/workspace/liquidprompt/liquidprompt"
for LIQUIDPROMPT in ${LIQUIDPROMPTS} ; do
    [ -r "${LIQUIDPROMPT}" ] && source "${LIQUIDPROMPT}"
done

true
