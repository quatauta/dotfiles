# Header order
unhdr_order *
hdr_order \
    date \
    resent-date \
    sender \
    from \
    resent-from \
    in-reply-to \
    reply-to \
    to \
    resent-to \
    cc \
    resent-cc \
    bcc \
    newsgroups \
    followup-to \
    subject \
    resent-subject \
    comment \
    keywords \
    x-label \
    organization \
    organisation \
    user-agent \
    x-mailer \
    x-newsreader \
    sensitivity \
    importance \
    priotity \
    x-priority \
    disposition-notification-options \
    disposition-notification-to \
    disposition \
    final-recipient \
    reporting-ua \
    openpgp \
    x-pgp \
    x-pgp-fingerprint \
    x-pgp-key \
    x-pgp-keyid \
    x-request-pgp \
    jabber-id \
    x-dspam-result \
    x-spam-level \
    x-gmx-antispam \
    x-virus-status \
    x-gmx-antivirus

